@model IEnumerable<Library.Models.Invoice>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="d-flex justify-content-between align-items-center">
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    <form asp-action="Index" method="get">
        <input style="width:400px" name="search" class="d-inline form-control" placeholder="search...." type="text" />
        <button class="d-inline btn btn-outline-primary">search</button>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.OrderISBN)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.InvoiceISBN">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.InvoiceISBN">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.InvoiceISBN">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
